<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('../partials/head'); %>
    </head>
    <body class="container">
        <header>
            <%- include('../partials/header'); %>
        </header>
        <main>
            <!-- Edit Order -->
            <div class="jumbotron">
                <h1>Edit Order</h1>
                <form action="orders/<%= order.id %>/update?_method=put" method="post">
                    <div class="form-group">
                      <label for="customer">Name</label>
                      <input type="text" name="customer" class="form-control" id="customer" placeholder="Maria Musterfrau">
                    </div>
                    <div class="form-group">
                        <label for="task">Object</label>
                        <input type="text" name="task" class="form-control" id="task" placeholder="Object to print">
                      </div>
                    <div class="form-group">
                      <label for="temperature">Temperature in process</label>
                      <select class="form-control" name="temperature" id="temperature">
                        <option>50</option>
                        <option>100</option>
                        <option>150</option>
                        <option>200</option>
                      </select>
                    </div>     
                    <div class="form-group">
                        <label for="material">Material of Output</label>
                        <select class="form-control" name="material" id="material">
                          <option>Synthetic</option>
                          <option>Stone</option>
                          <option>Metal</option>
                          <option>Glas</option>
                        </select>
                    </div>
                    <button type="submit" class="btn btn-secondary">Update</button>      
                </form>
            </div>
        </main>
        <footer>
            <%- include('../partials/footer'); %>
        </footer>
    </body>
</html>