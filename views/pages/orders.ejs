<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('../partials/head'); %>
    </head>
    <body class="container">

        <header>
            <%- include('../partials/header'); %>
        </header>

        <main>
            <div class="jumbotron">
                <h1>Current Orders</h1>
                <table class="table">
                    <% for(let i = 0; i < orders.length; i++) { %>
                        <tr>
                            <td><%= orders[i].customer %></td>
                            <td><%= orders[i].task %></td>
                            <td><%= orders[i].temperature %></td>
                            <td><%= orders[i].material %></td>
                        </tr>                        
                  <% } %>                
                </table>      
            </div>
        </main>

        <footer>
            <%- include('../partials/footer'); %>
        </footer>

    </body>
</html>