<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('../partials/head'); %>
    </head>
    <body class="container">
        <header>
            <%- include('../partials/header'); %>
        </header>
        <main>
            <!-- Order Assignments Ãœbersicht -->
            <div class="jumbotron">
                <h1>Assigments (WIP)</h1>
                <table class="table">
                    <thead>
                        <tr>
                            <th>Used machine</th>
                            <th>Allocated orders</th>
                        </tr>
                    </thead>
                    <% for(let i = 0; i < order_assignments.length; i++) { %>
                        <tr>
                            <td><%= order_assignments[i].machine_id %></td>
                            <td><%= order_assignments[i].order_id %></td>
                            <td><%= order_assignments[i].state %></td>
                            <td><a href="order_assignments/<%= order_assignments[i].id %>/edit">Edit</a></td>
                        </tr>                        
                  <% } %>                
                </table>
                <h1>Assignments (Scheduled)</h1>
                <table class="table">
                    <thead>
                        <tr>
                            <th>Used machine</th>
                            <th>Allocated orders</th>
                        </tr>
                    </thead>
                    <% for(let i = 0; i < order_assignments.length; i++) { %>
                        <tr>
                            <td><%= order_assignments[i].machine_id %></td>
                            <td><%= order_assignments[i].order_id %></td>
                            <td><%= order_assignments[i].state %></td>
                            <td><a href="order_assignments/<%= order_assignments[i].id %>/edit">Edit</a></td>
                        </tr>                        
                  <% } %>                
                </table>      
            </div>  
            <!-- Neue Order Assignment erstellen -->
            <div class="jumbotron">
                <h1>New Assignment</h1>
                <form action="order_assignments/" method="post">
                    <div class="form-group">
                      <label for="machine_id">Maschinen ID</label>
                      <input type="text" name="machine_id" class="form-control" id="machine_id" placeholder="z.B. 19">
                    </div>
                    <div class="form-group">
                        <label for="order_id">Order ID</label>
                        <input type="text" name="order_id" class="form-control" id="order_id" placeholder="z.B. 100">
                    </div>     
                    <div class="form-group">
                        <label for="state">State</label>
                        <input type="text" name="state" class="form-control" id="state" placeholder="WIP / Scheduled">
                    </div>                    
                    <button type="submit" class="btn btn-secondary">Send</button>      
                </form>
            </div>         
        </main>
        <footer>
            <%- include('../partials/footer'); %>
        </footer>
    </body>
</html>